### SYSTEM ACTIONS ###

"systemctl suspend"
	Mod2+Mod4 + l

"xfconf-query -c xfce4-power-manager -p /xfce4-power-manager/presentation-mode -T"
	Mod2+Mod4 + p


### WINDOW MANAGEMENT ###

"/home/arthur/.dotfiles/movescreen.py -r up"
	Shift+Mod2+Mod4 + Up

"/home/arthur/.dotfiles/movescreen.py -r down"
	Shift+Mod2+Mod4 + Down


### ROFI ###

"rofi -show drun"
	Alt+Mod2 + F1
	# The super key is mapped to Alt+F1 (xcape) in .xprofile

"rofi -show run"
	Mod2+Mod4 + space


### OPEN SYSTEMS CONFIGS ###

"blueman-manager"
	Control+Alt+Mod2 + b

"xfce4-display-settings --minimal"
	Control+Alt+Mod2 + p


### LAUNCH APPS ###

"xfce4-terminal"
	Mod2+Mod4 + Return

"thunar"
	Mod2+Mod4 + f

"gnome-screenshot -i"
	Mod2 + Print

