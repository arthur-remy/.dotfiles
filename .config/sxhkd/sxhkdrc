### SYSTEM ###

super + BackSpace
	systemctl suspend-then-hibernate

super + p
	xfconf-query -c xfce4-power-manager -p /xfce4-power-manager/presentation-mode -T

### MEDIA & VOLUME KEYS ###

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioPlay
	playerctl play-pause

XF86AudioPrev
	playerctl previous

XF86AudioNext
	playerctl next

### BLUETOOTH ###

control + alt + b
	$HOME/.local/bin/toggle-bluetooth

super + b
	bluetoothctl power on; rfkill unblock bluetooth; blueman-manager

# Connect to headphones
super + shift + b
	bluetoothctl power on; rfkill unblock bluetooth; bluetoothctl connect D4:68:AA:DB:09:D0

### WINDOW MANAGEMENT ###

super + shift + {Up,Down}
	$HOME/.local/bin/changescreen -r {up,down}

super + exclam
	wmctrl -c :ACTIVE:

### ROFI ###

# The super key is mapped to Alt+F1 (xcape) in .xprofile
alt + F1
	rofi -show combi -combi-modi "window,drun" -modi combi

super + space
	rofi -show run


### OPEN SYSTEMS CONFIGS ###

control + shift + alt + p
	xfce4-display-settings --minimal

control + alt + p
	$HOME/.local/bin/rofi-autorandr


### SCREENSHOTS ###

Print
	$HOME/.local/bin/screenshot

### LAUNCH APPS ###
# run-or-raise script is in located in $HOME/.local/bin/run-or-raise

super + {_, shift +} Return
	{run-or-raise Alacritty.Alacritty, } alacritty

super + {_, shift +} u
	{run-or-raise Navigator.firefox, } firefox

super + {_, shift +} f
	{run-or-raise Thunar.Thunar, } thunar

control + alt + w
	mailspring & slack & google-calendar-nativefier &

super + n
	fd -H -t f . $HOME/Documents/Notes | rofi -dmenu | xargs -r nvim

super + t
	$HOME/Documents/Code/Projects/python_utils/log_action_on_jira.py

super + parenright
	rofimoji

super + i
	run-or-raise slack.Slack slack

super + o
	fd . -H -t f | fzfmenu | xargs --no-run-if-empty xdg-open

